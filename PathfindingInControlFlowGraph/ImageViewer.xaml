<Window x:Class="PathfindingInControlFlowGraph.ImageViewer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PathfindingInControlFlowGraph"
        xmlns:local1="clr-namespace:PathfindingInControlFlowGraph.Helpers"
        mc:Ignorable="d"
        Title="ImageViewer" Height="800" Width="600" WindowStartupLocation="CenterScreen">
    <Grid>
        <local1:ZoomBorder x:Name="border" ClipToBounds="True" Background="Gray">
            <Image x:Name="src" />
        </local1:ZoomBorder>
    </Grid>
</Window>
